<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="clientLoginPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.chatApp.controller.ClientLoginFormController">
   <children>
      <JFXButton layoutX="214.0" layoutY="295.0" onAction="#btnLoginOnAction" text="Log in" />
      <JFXTextField fx:id="txtName" labelFloat="true" layoutX="188.0" layoutY="242.0" promptText="enter name" />
      <JFXButton layoutX="222.0" layoutY="62.0" onAction="#btnAddClientImageOnAction" prefHeight="110.0" prefWidth="120.0" text=".">
         <font>
            <Font size="1.0" />
         </font>
         <graphic>
            <ImageView fx:id="clientImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/user.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
   </children>
</AnchorPane>
